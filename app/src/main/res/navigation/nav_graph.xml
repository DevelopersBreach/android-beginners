<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.developersbreach.androidbeginners.view.list.ListFragment"
        android:label="Movie List"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/listToDetailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        tools:layout="@layout/fragment_detail"
        android:name="com.developersbreach.androidbeginners.view.detail.DetailFragment"
        android:label="Detail" >
        <argument
            android:name="movieArgs"
            app:argType="com.developersbreach.androidbeginners.Movie" />
    </fragment>

</navigation>