<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_student_card_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="#232323"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/item_student_roll_number_text_view"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="#fafafa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="25" />

        <TextView
            android:id="@+id/item_student_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="monospace"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="#E8E8E8"
            app:layout_constraintBottom_toTopOf="@id/item_student_sport_text_view"
            app:layout_constraintStart_toEndOf="@id/item_student_roll_number_text_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Raj" />

        <TextView
            android:id="@+id/item_student_sport_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:paddingVertical="4dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="#BDBDBD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/item_student_name_text_view"
            app:layout_constraintTop_toBottomOf="@id/item_student_name_text_view"
            tools:text="ESports" />

        <ImageView
            android:id="@+id/item_student_sport_image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_esports" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>